@using _19DTHA_A_DO_AN.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_LayoutGrocery.cshtml";
}

<div class="banner">
    <div class="w3l_banner_nav_right">
        <!-- login -->
        <div class="w3_login">
            <h3>Login</h3>
            <div class="w3_login_module">
                <div class="module form-module">
                    <div class="toggle">
                        <i class="fa fa-times fa-pencil"></i>
                    </div>
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form">
                            <h2>Login to your account</h2>
                            <form @*action="#" method="post"*@>

                                @Html.TextBoxFor(m => m.Email, new { type = "text", name = "Email", placeholder = "Email", required = " " })
                                @Html.TextBoxFor(m => m.Password, new { type = "password", name = "Password", placeholder = "Password", required = " " })
                                <div class="form-group">
                                    <div class="col-md-offset-1 ">
                                        <div class="checkbox">
                                            @Html.CheckBoxFor(m => m.RememberMe)
                                            @Html.LabelFor(m => m.RememberMe)
                                        </div>
                                    </div>
                                </div>
                                <input type="submit" value="Login">
                            </form>
                        </div>

                        <div class="cta"><a href="#">Forgot your password?</a></div>
                    }
                </div>
            </div>
        </div>
        <!-- //login -->
    </div>
    <div class="clearfix"></div>
</div>
<!-- //banner -->

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
